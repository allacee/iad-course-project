<?xml version='1.0' encoding='utf-8'?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
     <persistence-unit name="myUnit" >
          <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
          <class>com.gamers.DAO.GenericDAOImpl</class>
          <class>com.gamers.Entities.Game</class>
          <class>com.gamers.Entities.GamerGames</class>
          <class>com.gamers.Entities.Event</class>
          <class>com.gamers.Entities.Task</class>
          <class>com.gamers.Entities.Dictionary</class>
          <class>com.gamers.Entities.Dish</class>
          <class>com.gamers.Entities.Person</class>
          <properties>
                <!-- Database connection settings -->
                <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
                <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:4321/studs"/>
                <property name="hibernate.connection.username" value="s269331"/>
                <property name="hibernate.connection.password" value="xxxxx"/>
                <!-- SQL dialect -->
                <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
                <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
                <property name="hibernate.archive.autodetection" value="class"/>
                <property name="hibernate.show_sql" value="true"/>
                <property name="hibernate.format_sql" value="true"/>
                <property name="hbm2ddl.auto" value="update"/>

        </properties>
   </persistence-unit>
</persistence>