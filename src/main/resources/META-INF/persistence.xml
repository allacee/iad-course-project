<?xml version='1.0' encoding='utf-8'?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="myUnit" >

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.gamers.DAO.GenericDAOImpl</class>
        <class>com.gamers.DAO.PersonDAO</class>

        <class>com.gamers.Entities.Game</class>
        <class>com.gamers.Entities.PersonsGame</class>
        <class>com.gamers.Entities.Event</class>
        <class>com.gamers.Entities.Task</class>
        <class>com.gamers.Entities.Info</class>
        <class>com.gamers.Entities.Lunch</class>
        <class>com.gamers.Entities.Message</class>
        <class>com.gamers.Entities.Person</class>
        <class>com.gamers.Entities.Dictionary</class>
        <class>com.gamers.Entities.Dish</class>

        <properties>
            <!-- Database connection settings -->
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/studs"/>
            <property name="hibernate.connection.username" value="s269331"/>
            <property name="hibernate.connection.password" value="zmg269"/>
            <!-- SQL dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>


        </properties>
    </persistence-unit>
</persistence>

